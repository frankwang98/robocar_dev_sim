<launch>
  <arg name="model" default="$(env ROBOCAR_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

  <include file="$(find robocar_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find robocar_gazebo)/rviz/robocar_gazebo_model.rviz"/>
</launch>
